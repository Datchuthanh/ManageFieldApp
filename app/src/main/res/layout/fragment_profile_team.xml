<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Information Team"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_phone_24_green"/>
            <ImageButton
                android:id="@+id/btnEmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_email_24_yeallow"/>

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_edit_30_white"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent" >
    <androidx.cardview.widget.CardView
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/cover_team"
                android:scaleType="fitXY"

                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/avatar_team"
                app:border_color="@color/white"
                app:border_width="5dp"
                app:layout_constraintBottom_toBottomOf="@id/cover"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover" />
            <LinearLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/inforBasic"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity=""
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_baseline_account_box_24_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Chelsea Footbal Club"/>
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_email_24_yeallow"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Chelsea@gmail.com"/>
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_phone_24_green"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0984060798"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rating">
                    </TextView>

                    <TextView

                        android:gravity="center_horizontal"
                        android:text="9.8"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/avatar_team"
                        android:textSize="50dp"
                         />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lblInfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/inforBasic"
                app:layout_constraintLeft_toLeftOf="parent"
                >
                <TextView
                    android:textColor="@color/colorTittle"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic information"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/lblInfor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/listGridData"
                >

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Matched">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="20">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Playes">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="17">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Different">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="58">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/gridRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/weight"
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Win">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="10">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/height"
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Drawn">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="4">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/agePlayer"
                        android:layout_margin="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Lose">
                            </TextView>
                            <TextView
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="3">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
 </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>